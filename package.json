{
  "name": "@guardian/actions-riff-raff",
  "private": true,
  "version": "0.0.0",
  "description": "A GitHub Action to build and upload Riff-Raff artifacts.",
  "main": "index.js",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node16 --outfile=index.js",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "lint": "eslint . --ext .ts --no-error-on-unmatched-pattern",
    "format": "prettier --check \"**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "github.com/guardian/actions-riff-raff"
  },
  "author": "devx@theguardian.com",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@aws-sdk/client-s3": "^3.67.0",
    "esbuild": "^0.14.29",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@guardian/eslint-config-typescript": "^1.0.8",
    "@guardian/prettier": "^2.1.1",
    "@guardian/tsconfig": "^0.1.4",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.23",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "prettier": "@guardian/prettier",
  "eslintConfig": {
    "extends": "@guardian/eslint-config-typescript"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
